body {
    background-color: #000;
    color: #fff;
    font-family: 'Inter', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.container {
    text-align: center;
}

h1 {
    font-weight: 600;
    margin-bottom: 0.5rem;
    letter-spacing: -0.05em;
}

p {
    font-weight: 300;
    opacity: 0.7;
    margin-top: 0;
}

.status {
    font-size: 0.8rem;
    margin-top: 2rem;
    opacity: 0.4;
    font-family: monospace;
}
