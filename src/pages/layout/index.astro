  x: "D",
  c: "B",
  v: "G",
  b: "J",
  n: "V",
  m: "U",
  ",": "-",
  ".": ",",
  "/": ".",
};

// Left hand QWERTY positions
const leftHandKeys = new Set([
  "q",
  "w",
  "e",
  "r",
  "t",
  "a",
  "s",
  "d",
  "f",
  "g",
