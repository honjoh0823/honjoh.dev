  "x",
  "c",
  "v",
  "b",
]);
const homeKeys = new Set(["a", "s", "d", "f", "j", "k", "l", ";"]);

// Pre-compute keyboard rendering data (alpha keys only)
const rawRows = [
  [
    { q: "q", y: "M" },
    { q: "w", y: "Y" },
    { q: "e", y: "R" },
    { q: "r", y: "W" },
    { q: "t", y: "P" },
    { q: "y", y: "X" },
    { q: "u", y: "L" },
    { q: "i", y: "Q" },
    { q: "o", y: "C" },
    { q: "p", y: "'" },
  ],
  [
    { q: "a", y: "K" },
    { q: "s", y: "S" },
    { q: "d", y: "T" },
    { q: "f", y: "N" },
    { q: "g", y: "H" },
    { q: "h", y: "F" },
    { q: "j", y: "A" },
    { q: "k", y: "O" },
    { q: "l", y: "I" },
    { q: ";", y: "E" },
  ],
  [
    { q: "z", y: "Z" },
    { q: "x", y: "D" },
    { q: "c", y: "B" },
    { q: "v", y: "G" },
    { q: "b", y: "J" },
    { q: "n", y: "V" },
    { q: "m", y: "U" },
    { q: ",", y: "-" },
    { q: ".", y: "," },
    { q: "/", y: "." },
  ],
];

// Build computed key rows
const keyboardRows = rawRows.map((row) =>
  row.map((key) => {
    const isLeft = leftHandKeys.has(key.q);
    const isHome = homeKeys.has(key.q);
    const cls = `key${isLeft ? " key-left" : " key-right"}${isHome ? " key-home" : ""}`;
    return {
      ...key,
      isAlpha: true,
      cls,
      style: "",
      keyId: `key-${key.q}`,
      qUpper: key.q.toUpperCase(),
    };
  }),
);
// Generate repeated problems
function repeat(display: string, romaji: string, count: number) {
  return Array.from({ length: count }, () => ({ display, romaji }));
}

