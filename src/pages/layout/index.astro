<script define:vars={{ quests, yamatoMap }}>
  // --- Audio ---
  let soundEnabled = true;
  const AudioCtx = window.AudioContext || window.webkitAudioContext;
  let audioCtx = null;

  function getAudioCtx() {
    if (!audioCtx) audioCtx = new AudioCtx();
    return audioCtx;
  }

  function playSound(freq, duration, type = "sine") {
    if (!soundEnabled) return;
    try {
      const ctx = getAudioCtx();
      const osc = ctx.createOscillator();
      const gain = ctx.createGain();
      osc.type = type;
      osc.frequency.value = freq;
      gain.gain.setValueAtTime(0.08, ctx.currentTime);
      gain.gain.exponentialRampToValueAtTime(0.001, ctx.currentTime + duration);
      osc.connect(gain);
      gain.connect(ctx.destination);
      osc.start();
      osc.stop(ctx.currentTime + duration);
    } catch (e) {}
  }

  function playCorrectSound() {
    playSound(880, 0.08, "sine");
  }
  function playMissSound() {
    playSound(220, 0.15, "square");
  }
  function playClearSound() {
    playSound(523, 0.1);
    setTimeout(() => playSound(659, 0.1), 80);
    setTimeout(() => playSound(784, 0.15), 160);
  }
  function playQuestClearSound() {
    playSound(523, 0.12);
    setTimeout(() => playSound(659, 0.12), 100);
    setTimeout(() => playSound(784, 0.12), 200);
    setTimeout(() => playSound(1047, 0.2), 300);
  }

  // Sound toggle
  const soundToggle = document.getElementById("sound-toggle");
  soundToggle.addEventListener("click", () => {
    soundEnabled = !soundEnabled;
    soundToggle.textContent = soundEnabled ? "üîä" : "üîá";
  });

  // Reverse map
  const reverseMap = {};
  for (const [qwerty, yamato] of Object.entries(yamatoMap)) {
    reverseMap[yamato.toUpperCase()] = qwerty;
  }

  // State
  let currentQuestIdx = 0;
  let currentProblemIdx = 0;
  let currentCharIdx = 0;
  let correctCount = 0;
  let missCount = 0;
  let startTime = null;
  let finished = false;

  // DOM refs
  const promptJa = document.getElementById("prompt-ja");
  const romajiDone = document.getElementById("romaji-done");
  const romajiCursor = document.getElementById("romaji-cursor");
  const romajiRemaining = document.getElementById("romaji-remaining");
  const statCorrect = document.getElementById("stat-correct");
  const statMiss = document.getElementById("stat-miss");
  const statSpeed = document.getElementById("stat-speed");
  const statAccuracy = document.getElementById("stat-accuracy");
  const particleContainer = document.getElementById("particle-container");
  const promptArea = document.getElementById("prompt-area");

  // Quest tabs
  const questTabs = document.querySelectorAll(".quest-tab");
  questTabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      switchQuest(parseInt(tab.dataset.questIdx));
    });
  });

  function switchQuest(idx) {
    if (idx < 0 || idx >= quests.length) return;
    currentQuestIdx = idx;
    resetStats();
    updateQuestTabs();
    loadProblem(0);
  }

  function updateQuestTabs() {
    questTabs.forEach((tab, idx) => {
      tab.classList.toggle("quest-tab-active", idx === currentQuestIdx);
    });
  }

  function updateQuestProgress() {
    const quest = quests[currentQuestIdx];
    const progress = currentProblemIdx / quest.problems.length;
    const fill = document.getElementById(`quest-progress-${currentQuestIdx}`);
    if (fill) fill.style.width = `${progress * 100}%`;
  }

  function resetStats() {
    currentProblemIdx = 0;
    currentCharIdx = 0;
    correctCount = 0;
    missCount = 0;
    startTime = null;
    finished = false;
    statCorrect.textContent = "0";
    statMiss.textContent = "0";
    statSpeed.textContent = "-";
    statAccuracy.textContent = "-";
    quests.forEach((_, idx) => {
      const fill = document.getElementById(`quest-progress-${idx}`);
      if (fill && idx === currentQuestIdx) fill.style.width = "0%";
    });
  }

  function loadProblem(idx) {
    const quest = quests[currentQuestIdx];
    if (idx >= quest.problems.length) {
      finished = true;
      clearHighlight();
      showInlineResult();
      playQuestClearSound();
      const fill = document.getElementById(`quest-progress-${currentQuestIdx}`);
      if (fill) fill.style.width = "100%";
      return;
    }
    currentProblemIdx = idx;
    currentCharIdx = 0;
    promptJa.textContent = quest.problems[idx].display;
    promptArea.classList.remove("prompt-clear");
    updateRomajiDisplay();
    highlightKey();
    updateQuestProgress();
  }

  function updateRomajiDisplay() {
    const romaji = quests[currentQuestIdx].problems[currentProblemIdx].romaji;
    romajiDone.textContent = romaji.substring(0, currentCharIdx);
    romajiCursor.textContent = romaji[currentCharIdx] || "";
    romajiRemaining.textContent = romaji.substring(currentCharIdx + 1);
  }

  function clearHighlight() {
    document.querySelectorAll(".key").forEach((k) => {
      k.classList.remove("key-active", "key-correct", "key-miss");
    });
  }

  function highlightKey() {
    clearHighlight();
    const romaji = quests[currentQuestIdx].problems[currentProblemIdx].romaji;
    const targetChar = romaji[currentCharIdx];
    if (!targetChar) return;
    const qwertyKey = reverseMap[targetChar.toUpperCase()];
    if (qwertyKey) {
      const el = document.getElementById(`key-${qwertyKey}`);
      if (el) el.classList.add("key-active");
    }
  }

  function flashKey(qwertyKey, className) {
    const el = document.getElementById(`key-${qwertyKey}`);
    if (el) {
      el.classList.add(className);
      setTimeout(() => el.classList.remove(className), 200);
    }
  }

  function updateSpeed() {
    if (!startTime || correctCount === 0) return;
    const elapsed = (Date.now() - startTime) / 1000;
    const speed = (correctCount / elapsed).toFixed(1);
    statSpeed.textContent = speed;
    const s = parseFloat(speed);
    if (s >= 5) statSpeed.style.color = "#27ae60";
    else if (s >= 3) statSpeed.style.color = "#f39c12";
    else statSpeed.style.color = "";
  }

  function updateAccuracy() {
    const total = correctCount + missCount;
    if (total === 0) return;
    statAccuracy.textContent = ((correctCount / total) * 100).toFixed(0);
  }

  // Particles
  function spawnParticles(qwertyKey) {
    const keyEl = document.getElementById(`key-${qwertyKey}`);
    const kb = document.getElementById("keyboard");
    if (!keyEl || !kb) return;
    const rect = keyEl.getBoundingClientRect();
    const kbRect = kb.getBoundingClientRect();
    const cx = rect.left - kbRect.left + rect.width / 2;
    const cy = rect.top - kbRect.top + rect.height / 2;
    for (let i = 0; i < 5; i++) {
      const p = document.createElement("div");
      p.className = "particle";
      const angle = Math.random() * Math.PI * 2;
      const dist = 20 + Math.random() * 25;
      p.style.left = cx + "px";
      p.style.top = cy + "px";
      p.style.setProperty("--dx", Math.cos(angle) * dist + "px");
      p.style.setProperty("--dy", Math.sin(angle) * dist + "px");
      particleContainer.appendChild(p);
      setTimeout(() => p.remove(), 500);
    }
  }

  // Inline result (no modal)
  function showInlineResult() {
    const total = correctCount + missCount;
    const accuracy = total > 0 ? (correctCount / total) * 100 : 0;
    const elapsed = startTime ? (Date.now() - startTime) / 1000 : 0;
    const speed = elapsed > 0 ? correctCount / elapsed : 0;
    const score = accuracy * 0.6 + Math.min(speed, 8) * 5;
    let rank;
    if (score >= 85) rank = "S";
    else if (score >= 70) rank = "A";
    else if (score >= 50) rank = "B";
    else rank = "C";

    promptArea.classList.add("prompt-clear");
    promptJa.textContent = `„ÇØ„É™„Ç¢ÔºÅ „É©„É≥„ÇØ ${rank}`;
    romajiDone.textContent = "";
    romajiCursor.textContent = "";
    romajiRemaining.textContent = `${accuracy.toFixed(0)}% / ${speed.toFixed(1)}ÊâìÁßí`;
  }

  // Input handler
  document.addEventListener("keydown", (e) => {
    if (e.code === "Space") {
      e.preventDefault();
      resetStats();
      loadProblem(0);
      return;
    }
    if (e.key === "Escape") {
      e.preventDefault();
      if (finished) {
        resetStats();
        loadProblem(0);
        return;
      }
      currentProblemIdx++;
      loadProblem(currentProblemIdx);
      return;
    }
    // Number keys 1-9 for quest switching
    if (e.key >= "1" && e.key <= "9") {
      e.preventDefault();
      switchQuest(parseInt(e.key) - 1);
      return;
    }
    if (e.key === "ArrowLeft") {
      e.preventDefault();
      if (currentQuestIdx === 0) {
        window.location.href = "/works/";
      } else {
        switchQuest(currentQuestIdx - 1);
      }
      return;
    }
    if (e.key === "ArrowRight") {
      e.preventDefault();
      switchQuest(currentQuestIdx + 1);
      return;
    }
    if (finished) return;
    if (e.ctrlKey || e.altKey || e.metaKey) return;
    if (e.key === "Tab") return;
    e.preventDefault();

    if (!startTime) startTime = Date.now();
    const romaji = quests[currentQuestIdx].problems[currentProblemIdx].romaji;
    const targetChar = romaji[currentCharIdx];
    if (!targetChar) return;
    const typed = e.key.toUpperCase();

    if (typed === targetChar.toUpperCase()) {
      correctCount++;
      statCorrect.textContent = correctCount;
      const qKey = reverseMap[targetChar.toUpperCase()];
      if (qKey) {
        flashKey(qKey, "key-correct");
        spawnParticles(qKey);
      }
      playCorrectSound();
      currentCharIdx++;
      updateRomajiDisplay();
      updateSpeed();
      updateAccuracy();
      if (currentCharIdx >= romaji.length) {
        playClearSound();
        currentProblemIdx++;
        loadProblem(currentProblemIdx);
      } else {
        highlightKey();
      }
    } else {
      missCount++;
      statMiss.textContent = missCount;
      updateAccuracy();
      playMissSound();
      const promptArea = document.getElementById("prompt-area");
      promptArea.classList.add("shake");
      setTimeout(() => promptArea.classList.remove("shake"), 300);
    }
  });

  // Init
  loadProblem(0);
</script>

